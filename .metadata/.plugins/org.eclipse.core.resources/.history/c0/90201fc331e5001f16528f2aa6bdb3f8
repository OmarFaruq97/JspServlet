package jsp.product.reg;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.SQLException;

public class ProductDAO {

    // Database connection method (assuming DBConnection class is set up)
    private static final String INSERT_PRODUCT_SQL = "INSERT INTO products (product_id, product_name, quantity, price) VALUES (?, ?, ?, ?)";

    public void addProduct(Product product) throws SQLException {
        try (Connection connection = DBConnection.getConnection();
             PreparedStatement preparedStatement = connection.prepareStatement(INSERT_PRODUCT_SQL)) {
            
            // Set parameters for the PreparedStatement, including product_id
            preparedStatement.setInt(1, product.getProduct_id());
            preparedStatement.setString(2, product.getProduct_name());
            preparedStatement.setInt(3, product.getQuantity());
            preparedStatement.setDouble(4, product.getPrice());

            // Execute the query to insert the product into the database
            preparedStatement.executeUpdate();
        }
    }
}