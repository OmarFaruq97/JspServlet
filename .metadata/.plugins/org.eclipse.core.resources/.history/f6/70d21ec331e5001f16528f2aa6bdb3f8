package jsp.product.reg;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class DBConnection {
    private static final String URL = "jdbc:postgresql://localhost:5432/DemoDB";
    private static final String USER = "postgres";  // আপনার PostgreSQL ইউজারনেম দিন
    private static final String PASSWORD = "1234";  // আপনার PostgreSQL পাসওয়ার্ড দিন

    public static Connection getConnection() {
        Connection conn = null;
        try {
            Class.forName("org.postgresql.Driver");
            conn = DriverManager.getConnection(URL, USER, PASSWORD);
        } catch (ClassNotFoundException | SQLException e) {
            e.printStackTrace();
        }
        return conn;
    }
}